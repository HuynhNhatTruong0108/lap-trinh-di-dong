<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="725dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/manhinh"
            android:layout_width="409dp"
            android:layout_height="103dp"
            android:ems="10"
            android:inputType="textPersonName"
             />


        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="409dp"
            android:layout_height="63dp"
            android:text="13%"
            tools:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="409dp"
            android:layout_height="63dp"
            android:text="15%"
            tools:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="409dp"
            android:layout_height="63dp"
            android:text="18%"
            tools:textSize="20dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:text="CALCULATE YOUR TIP" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="340dp"
            android:background="#EDE1E1"
            android:textAlignment="textEnd">


            <Button
                android:id="@+id/dautick"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_row="3"

                android:layout_column="3"
                android:background="@color/white"
                android:text="tick"
                android:textSize="20dp" />

            <Button
                android:id="@+id/daucach"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_row="3"

                android:layout_column="2"
                android:background="@color/white"
                android:text="_"
                android:textSize="20dp" />

            <Button
                android:id="@+id/daucham"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_row="3"

                android:layout_column="0"
                android:background="@color/white"
                android:text="."
                android:textSize="20dp" />

            <Button
                android:id="@+id/dauxoa"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_row="2"
                android:layout_column="3"
                android:background="@color/white"
                android:text="x"
                android:textSize="20dp" />

            <Button
                android:id="@+id/dautru"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="3"
                android:background="@color/white"
                android:text="-"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@color/white"
                android:text="4"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@color/white"
                android:text="3"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@color/white"
                android:text="5"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@color/white"
                android:text="9"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@color/white"
                android:text="6"
                android:textSize="20dp" />

            <Button
                android:id="@+id/dauphay"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_column="3"
                android:background="@color/white"
                android:text=","
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@color/white"
                android:text="8"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@color/white"

                android:text="1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@color/white"
                android:text="2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@color/white"
                android:text="7"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_row="3"

                android:layout_column="1"
                android:background="@color/white"
                android:text="0"
                android:textSize="20dp" />

        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>